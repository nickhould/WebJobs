<div class="topbar">
  <div class="fill">
    <div class="container">
      <a class="brand" href="#">Jobber</a>
      <ul class="nav">
        <li class="active"><a href="#">Home</a></li>
        <li><a href="#about">About</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </div>
